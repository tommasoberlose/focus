<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    tools:context="nego.reminders.AddItemDialog">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:maxLines="3"
        android:textColor="@android:color/white"
        android:inputType="textCapSentences"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColorHint="@color/white_back"
        android:background="@color/primary"
        android:hint="Reminder"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snozzed until tomorrow"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:id="@+id/reminder"
        android:layout_below="@id/editText"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_below="@+id/reminder">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_add_item"
            android:textAppearance="?android:attr/buttonStyle"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:padding="8dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white_back"
            android:clickable="true"
            android:id="@+id/action_add_reminder"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_save"
            android:textAppearance="?android:attr/buttonStyle"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:padding="8dp"
            android:clickable="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white_back"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/action_save" />
    </RelativeLayout>
</RelativeLayout>
