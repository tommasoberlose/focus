<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- MAIN THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <!--<item name="android:navigationBarColor">@color/primary_dark</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="colorControlActivated">@color/primary_dark</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:autoCompleteTextViewStyle">@style/MySearchViewStyle</item>

        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/item_background</item>
        <item name="android:background">@drawable/item_background</item>
    </style>

    <!-- MAIN ACTIONBAR -->
    <style name="style_actionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionModeBackground">@color/primary</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="textAppearanceLargePopupMenu">@style/popup_iteml</item>
        <item name="textAppearanceSmallPopupMenu">@style/popup_items</item>
    </style>

    <!-- POPUP MAIN ACTIONBAR -->
    <style name="popup_iteml" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:color">@color/primary_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="popup_items" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:color">@color/primary_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <!-- SETTINGS THEME -->
    <style name="style_settings" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
    </style>

    <!-- ADD ITEM THEME -->
    <style name="style_additem" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowActionModeOverlay">true</item>

        <item name="windowActionModeOverlay">true</item>

        <item name="colorControlActivated">@color/primary</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>
    </style>

    <!-- ADD ITEM ACTIONBAR -->
    <style name="style_actionBar.additem" parent="style_actionBar">
        <item name="android:paddingRight">4dp</item>
        <item name="android:actionMenuTextAppearance">@style/save_actionbutton</item>
        <item name="android:editTextStyle">@style/Widget.App.EditText</item>
    </style>
    <style name="save_actionbutton" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Widget.App.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:colorControlActivated">@color/secondary_text</item>
        <item name="android:colorControlHighlight">@color/secondary_text</item>
    </style>

    <!-- TIMELINE THEME -->
    <style name="style_timeline" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@android:color/white</item>
        <item name="android:colorPrimaryDark">@color/white_dark</item>
        <item name="android:colorAccent">@color/primary</item>

        <item name="colorControlActivated">@color/secondary_text</item>
        <item name="colorSwitchThumbNormal">@color/back_selected_item</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- INTRO THEME -->
    <style name="style_intro" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/primary_dark</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/primary</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- LOCATION THEME -->
    <style name="style_location" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primary_red</item>
        <item name="android:colorPrimaryDark">@color/primary_red_dark</item>
        <item name="android:colorAccent">@color/primary_red_dark</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:longClickable">false</item>
    </style>
</resources>
